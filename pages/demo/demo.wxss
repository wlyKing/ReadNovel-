/* pages/demo/demo.wxss */
page{
  background: #E0EBF1;
  font-family: "Microsoft YaHei","arial","宋体"
}

.wrap .item{
  width: 750rpx;
  height: 360rpx;
  overflow: hidden;
}
.wrap .item image{
  width: 100%;
  height: 360rpx;
}
.newlist{
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.newlist .item{
  display: flex;
  border-bottom: 1px solid #CED9DF;
  padding: 25px 0;
  
}
.newlist .item .icon{
  width: 160rpx;
  height:160rpx;
  overflow: hidden;
}
.newlist .item .txt{
  margin-left: 20rpx;
  width: 530rpx;
  display: flex;
  flex-direction: column;
}

.newlist .item .title{
  color: #223F6B;
  font-size: 30rpx;
  line-height: 47rpx;
  margin-bottom: 6rpx;
  font-weight: bold;

}
.newlist .item .info{
  color: #616C70;
   line-height: 39rpx; 
  font-size: 22rpx;
}